<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="light" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="titleTextColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:spinnerItemStyle">@style/light.SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/light.SpinnerDropDownItem</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="light.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="light.SpinnerDropDownItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>